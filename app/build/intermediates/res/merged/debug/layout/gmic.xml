<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id = "@+id/cosmetologyintro"
        android:text = "Cosmetology"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:typeface="serif"
        android:textAlignment="center"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/cosmetology"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/gmic"
        android:text = "Grand Master in Cosmetology (GMIC)"
        android:layout_below="@+id/cosmetologyintro"
        android:textAlignment="center"
        android:gravity="center"
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/gmiccourse"
        android:text = "Course Content : "
        android:layout_below="@+id/gmic"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="false"
        android:textSize="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/gmiccontent"
        android:text = "Skin Theory, Electrology, Facials, Manicure, Pedicure, Hair Analysis and Treatments, Hair Cuts, Perming, Coloring, Hair Rebonding, Skin Analysis and Treatments, Cosmetic Recipes, Makeup, Body and Facial Hair Removal, Aromatherapy, Body Art and Nail Art, Nail Extensions, Saree Draping, Trendy Hairdos, Media Makeup,  Personal Grooming, Spa Therapies, Chemical Peels and Microdermabrasion, Salon Management and Business Ethics."
        android:textAlignment="center"
        android:gravity="center"
        android:typeface="normal"
        android:textSize="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/gmiccourse"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id = "@+id/gmiccareer"
        android:text = "Career Oppotunities : "
        android:layout_below="@+id/gmiccontent"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="false"
        android:textSize="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/gmiccopportunity"
        android:text = "Aesthetician, Salon Manager, Assisting Dermatologist, Beauty Manager, Trainer, Faculty"
        android:textSize="13dp"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/gmiccareer"
        android:layout_toEndOf="@+id/gmiccareer" />





</RelativeLayout>
