<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id = "@+id/regular1"
        android:text = "Regular Courses"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spa"
        android:layout_centerHorizontal="true"
        android:background="@drawable/courses_1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hair"
        android:layout_marginTop="0dp"
        android:text = "Hair"
        android:textAllCaps="true"
        android:layout_below="@+id/regular1"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:layout_marginLeft="0dp"
        android:textAlignment="center"
        android:background="@drawable/hair"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/underline"
        android:text = "________________"
        android:layout_marginStart="70dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="04dp"
        android:layout_below="@+id/regular1"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/heading1"
        android:text = "Course"
        android:textColor="#000000"
        android:layout_marginStart="46dp"
        android:textSize="25dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/regular1"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/underline1"
        android:text = "________"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/heading1"
        android:layout_alignEnd="@+id/heading1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/heading2"
        android:text = "Duration"
        android:textSize="25dp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:typeface="serif"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/heading1"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/underline2"
        android:text = "__________"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/heading2"
        android:layout_marginTop="-28dp"
        android:layout_alignEnd="@+id/heading2" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id = "@+id/hairtype4"
        android:text="Diploma in Hair Design"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/underline1"
        android:layout_marginBottom="299dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/heading2" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id = "@+id/hairtype1"
        android:text="Certificate Course in Hair Design (CHD)"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="false"
        android:layout_marginTop="250dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/heading2" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id = "@+id/hairtype2"
        android:text="Advance Diploma in Cosmetology (ADC)"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/hairtype1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id = "@+id/hairtype3"
        android:text="Advance Diploma in Hair Design"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="370dp"
        android:layout_below="@+id/cosmetologytype2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/hairduration2"
        android:text="2 Months"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/hairtype2"
        android:layout_alignStart="@+id/hairduration3" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/hairduration1"
        android:text="2 Months"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="05dp"
        android:layout_alignTop="@+id/hairtype1"
        android:layout_alignStart="@+id/hairduration4" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/hairduration3"
        android:text="14 days"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="05dp"
        android:layout_alignTop="@+id/hairtype3"
        android:layout_toEndOf="@+id/hairtype4" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id = "@+id/hairduration4"
        android:text="4 Months"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/hairtype4"
        android:layout_marginLeft="05dp"
        android:layout_below="@+id/underline2"
        android:layout_marginBottom="312dp"
        android:layout_alignParentStart="false"/>

</RelativeLayout>
