<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id = "@+id/regular1"
        android:text = "Regular Courses"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/courses_1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/makeup"
        android:layout_marginTop="0dp"
        android:text = "Make-UP"
        android:textAllCaps="true"
        android:layout_below="@+id/regular1"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:layout_marginLeft="0dp"
        android:textAlignment="center"
        android:background="@drawable/makeup"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/underline"
        android:text = "____________"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/regular1"
        android:layout_toStartOf="@+id/makeupduration4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/heading1"
        android:text = "Course"
        android:textColor="#000000"
        android:layout_marginStart="46dp"
        android:textSize="25dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/regular1"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/underline1"
        android:text = "________"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/heading1"
        android:layout_alignEnd="@+id/heading1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/heading2"
        android:text = "Duration"
        android:textSize="25dp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:typeface="serif"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/heading1"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/underline2"
        android:text = "__________"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/heading2"
        android:layout_alignEnd="@+id/makeupduration4" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeuptype2"
        android:text="Professional Makeup"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/underline1"
        android:layout_marginBottom="299dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/heading2" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeuptype1"
        android:text="Art of Makeup"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="false"
        android:layout_marginTop="230dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/heading2" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeuptype6"
        android:text="Advance Diploma in Makeup (Level IV)"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeuptype3"
        android:text="High-end Classical Dance Makeup"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="289dp"
        android:layout_below="@+id/makeuptype6"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeuptype4"
        android:text="Bridal Makeup"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/makeuptype3"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeuptype5"
        android:text="Medial Makeup (Level III)"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/makeuptype4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeupduration2"
        android:text="2 Months"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:layout_alignTop="@+id/makeuptype2"
        android:layout_toEndOf="@+id/makeuptype1" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeupduration1"
        android:text="1 Months"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_below="@+id/makeupduration4"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="19dp"
        android:layout_centerVertical="false"
        android:layout_alignStart="@+id/makeupduration2" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeupduration5"
        android:text="5 days"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/makeuptype5"
        android:layout_alignStart="@+id/underline2" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeupduration3"
        android:text="7 days"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_above="@+id/makeuptype5"
        android:layout_alignStart="@+id/makeupduration1" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeupduration6"
        android:text="52 days"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/makeuptype3"
        android:layout_alignStart="@+id/makeupduration2" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id = "@+id/makeupduration4"
        android:text="1 Months"
        android:textStyle="bold"
        android:textColor = "#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:layout_alignTop="@+id/makeuptype1"
        android:layout_alignStart="@+id/makeupduration1" />

</RelativeLayout>
</ScrollView>