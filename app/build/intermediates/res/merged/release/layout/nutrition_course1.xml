<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id = "@+id/nutritionintro"
            android:text = "Nutrition Courses"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/nutrition"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/nc1"
            android:text = "Certificate Course in Weight Management and Slimming Therapies"
            android:layout_below="@+id/nutritionintro"
            android:textAlignment="center"
            android:gravity="center"
            android:typeface="serif"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/nc1course"
            android:text = "Course Content : "
            android:layout_below="@+id/nc1"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_centerHorizontal="false"
            android:textSize="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/nc1content"
            android:text = "Components of body weight , Assessment Approaches in Weight Management, Causes and Consequences of Obesity, Energy nutrients and energy metabolism, Weight management â€“ dietary / therapeutic / behavioral and other approaches e.g. drugs, surgery etc., Weight imbalance, VLCC-Holistic approach to weight management."
            android:textAlignment="center"
            android:gravity="center"
            android:typeface="normal"
            android:textSize="15dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/nc1course"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id = "@+id/nc1career"
            android:text = "Career Oppotunities : "
            android:layout_below="@+id/nc1content"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_centerHorizontal="false"
            android:textSize="20dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/nc1copportunity"
            android:text = "Slimming Therapist in Health Clubs or Slimming Centers or Hospitals and Consultants to Health Care Industry."
            android:textSize="16dp"
            android:layout_alignTop="@+id/nc1career"
            android:layout_toEndOf="@+id/nc1career" />
    </RelativeLayout>