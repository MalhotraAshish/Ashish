<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id = "@+id/regular1"
            android:text = "Regular Courses"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/courses_1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nutrition"
            android:layout_marginTop="0dp"
            android:text = "Nutrition"
            android:textAllCaps="true"
            android:layout_below="@+id/regular1"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="italic"
            android:typeface="serif"
            android:layout_marginLeft="0dp"
            android:textAlignment="center"
            android:background="@drawable/nutrition"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/underline"
            android:text = "_______________"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_below="@+id/regular1"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/heading1"
            android:text = "Course"
            android:textColor="#000000"
            android:layout_marginStart="46dp"
            android:textSize="25dp"
            android:textStyle="italic"
            android:typeface="serif"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/regular1"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/underline1"
            android:text = "________"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/heading1"
            android:layout_alignEnd="@+id/heading1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/heading2"
            android:text = "Duration"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:typeface="serif"
            android:layout_marginEnd="19dp"
            android:layout_alignTop="@+id/heading1"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/underline2"
            android:text = "__________"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="50dp"
            android:layout_alignTop="@+id/heading2"
            android:layout_alignEnd="@+id/nutritionduration4" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id = "@+id/nutritiontype2"
            android:text="Diploma in Nutrition and Health Education(DNHE)"
            android:textStyle="bold"
            android:textColor = "#ffffff"
            android:textSize="15dp"
            android:layout_marginLeft="0dp"
            android:layout_below="@+id/underline1"
            android:layout_marginBottom="299dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/heading2" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id = "@+id/nutritiontype3"
            android:text="Diploma in Dietetics, Health and Nutriton (DDHN)"
            android:textStyle="bold"
            android:textColor = "#ffffff"
            android:textSize="15dp"
            android:layout_marginLeft="0dp"
            android:layout_centerVertical="false"
            android:layout_marginTop="230dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/heading2" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id = "@+id/nutritiontype1"
            android:text="Certificate Course in Weight Management and Slimming Therapies"
            android:textStyle="bold"
            android:textColor = "#ffffff"
            android:textSize="15dp"
            android:layout_marginLeft="0dp"
            android:layout_below="@+id/nutritiontype3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id = "@+id/nutritionduration2"
            android:text="12 Months"
            android:textStyle="bold"
            android:textColor = "#ffffff"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/nutritiontype2"
            android:layout_toEndOf="@+id/nutritiontype2" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id = "@+id/nutritionduration1"
            android:text="12 Months"
            android:textStyle="bold"
            android:textColor = "#ffffff"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/nutritiontype3"
            android:layout_toEndOf="@+id/nutritiontype3" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id = "@+id/nutritionduration4"
            android:text="3 Months"
            android:textStyle="bold"
            android:textColor = "#ffffff"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/nutritiontype1"
            android:layout_toEndOf="@+id/nutritiontype3" />

    </RelativeLayout>
</ScrollView>